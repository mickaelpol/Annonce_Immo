{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/connect.css') }}">
{% endblock %}

{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
        <h1 class="text-center login-title">Connexion administrateur</h1>
        <div class="account-wall">
            <form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">

                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}
                
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="{{ 'security.login.username'|trans }}" required autofocus>
                <input type="password" class="form-control" placeholder="{{ 'security.login.password'|trans }}" id="password" name="_password" required="required">
                <button class="btn btn-lg btn-primary btn-block" id="_submit" name="_submit" type="submit">
                    {{ 'security.login.submit'|trans }}</button>
                <label class="checkbox pull-left">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on"> {{ 'security.login.remember_me'|trans }}
                </label>
                <span class="clearfix"></span>
            </form>
        </div>
    </div>
</div>
