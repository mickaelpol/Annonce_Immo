{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <h1 class="text-center text-uppercase page-header">Editer le client {{ client.id }}</h1>
    </div>

    <div style="height:80px;"></div>

    <div c  lass="row">
        {{ form_start(edit_form) }}
    
    
            <div class="col-lg-6 col-lg-offset-3">
                {{ form_label(edit_form.nom) }}
                {{ form_widget(edit_form.nom, {"attr": {"class": "form-control"}}) }}
        
                {{ form_label(edit_form.prenom) }}
                {{ form_widget(edit_form.prenom, {"attr": {"class": "form-control"}}) }}
        
                {{ form_label(edit_form.telephone) }}
                {{ form_widget(edit_form.telephone, {"attr": {"class": "form-control"}}) }}
                
                <div style="height:20px;"></div>
                
                <input class="btn btn-success btn-block" type="submit" value="Editer" />
                
                <div style="height:20px;"></div>
                
            </div>
        {{ form_end(edit_form) }}
    </div>

    <div class="row">
        <div class="col-lg-4 col-lg-offset-3">
            <ul class="list-unstyled">
                <li>
                    <a class="btn btn-default btn-block" href="{{ path('admin_client_index') }}">
                        <span class="glyphicon glyphicon-arrow-left"></span>
                        Retour a la liste des clients
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div style="height:20px;"></div>
{% endblock %}
