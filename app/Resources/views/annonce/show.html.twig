{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <h1 class="text-center text-uppercase page-header">Annonce</h1>
    </div>

    
    <h3 class="text-center">{{ annonce.titre }}</h3>
    <table class="table">
        <tbody>
            

            <tr>
                <td>
                    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                            {% for image in annonce.files %}
                            <li data-target="#carousel" data-slide-to="{{ loop.index0 }}" {% if loop.index0==0 %} class="active" {% endif %}></li>
                            {% endfor %}
                        </ol>
                    
                        <!-- Wrapper for slides -->
                        <div class="carousel-inner" role="listbox">
                    
                            {% for entity in annonce.files %}
                            {% set runtimeConfig = {"thumbnail": {"size": [900, 900] }} %}
                            <div class="item {% if loop.index == 1 %} active {% endif %}">
                                <img  alt="{{ entity.nom }}" src="{{ asset('uploads/images/products/' ~ entity.file) | imagine_filter('my_thumb', runtimeConfig) }}" />
                            </div>
                            {% endfor %}
                    
                        </div>
                    
                        <!-- Controls -->
                        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </td>
            </tr>
            
            <tr>
                <th>Reference de l'annonce</th>
                <td>{{ annonce.id }}</td>
            </tr>
            <tr>
                <th>Pieces</th>
                <td>{{ annonce.pieces }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ annonce.prix }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ annonce.description }}</td>
            </tr>
            <tr>
                <th>Propriétaire</th>
                <td>{{ annonce.client }}</td>
            </tr>
            <tr>
                <th>N° Téléphone</th>
                <td>{{ annonce.client.telephone }}</td>
            </tr>
        </tbody>
    </table>


    <div class="row">
        <ul class="list-unstyled">
            <div class="col-lg-4">
                <li>
                    <a class="btn btn-default btn-md" href="{{ path('admin_annonce_index') }}">
                        <span class="glyphicon glyphicon-arrow-left"></span>
                        Retour a la liste des annonces
                    </a>
                </li>
            </div>
            {% if is_granted('ROLE_USER') %}
                <div class="col-lg-4">
                    <li>
                        <a class="btn btn-warning btn-md" href="{{ path('admin_annonce_edit', { 'id': annonce.id }) }}">
                            <span class="glyphicon glyphicon-pencil"></span>
                            Editer l'annonce
                        </a>
                    </li>
                </div>
                <div class="col-lg-4">
                    <li>
                        {{ form_start(delete_form) }}
                            <button class="btn btn-danger btn-md" type="submit">
                                <span class="glyphicon glyphicon-trash"></span>
                                Supprimer l'annonce
                            </button>
                        {{ form_end(delete_form) }}
                    </li>
                </div>
            {% endif %}
        </ul>
    </div>

    <div style="height:80px;"></div>
    
{% endblock %}
